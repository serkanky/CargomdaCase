@model Entity.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="bg-light rounded h-100 p-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Güncelleme</h6>
        <form method="post">
            @if (ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning">
                    Gerekli Tüm Alanları Doldurunuz.
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    Kategori eklenirken hata oluştu. Lütfen tüm alanları doldurun.
                </div>
            }
            <div class="mb-3">
                <label for="categoryname" class="form-label">Kategori Adı</label>
                <input type="hidden" class="form-control" id="id" asp-for="CategoryId" />
                <input type="text" class="form-control" id="categoryname" asp-for="CategoryName" />
                
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("CategoryName"))
                {
                    <span class="text-danger">@Html.ValidationMessage("CategoryName")</span>
                }
            </div>
            <div class="form-group">
                <label for="CategoryStatus">Kategori Durumu:</label>
                <select class="form-control" id="CategoryStatus" name="CategoryStatus">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>
