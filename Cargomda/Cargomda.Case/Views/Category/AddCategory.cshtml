@model Entity.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="bg-light rounded h-100 p-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Ekleme</h6>
        <form method="post">
            <div class="mb-3">
                <label for="parentcategory" class="form-label">Üst Kategori</label>
                @Html.DropDownListFor(x => x.ParentCategoryId, (List<SelectListItem>)ViewBag.ktgr?? new List<SelectListItem>{new SelectListItem{ Text = "Ana Kategori", Value="-1"}}, "Ana Kategori Ekle", new { @class = "form-control" })

                <label for="categoryname" class="form-label">Kategori Adı</label>
                <input type="text" class="form-control" id="categoryname" asp-for="CategoryName" />

                <label for="categorydescription" class="form-label">Kategori Açıklaması</label>
                <input type="text" class="form-control" id="categorydescription" asp-for="CategoryDescription" />

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("CategoryName"))
                {
                    <span class="text-danger">@Html.ValidationMessage("CategoryName")</span>
                }
            </div>
            <div class="form-group">
                <label for="CategoryStatus">Kategori Durumu:</label>
                <select class="form-control" id="CategoryStatus" name="CategoryStatus">
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>
