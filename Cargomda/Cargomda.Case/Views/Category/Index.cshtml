@model List<Entity.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori İşlemleri</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">Kategori Durumu</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.CategoryId</th>
                        <td>@category.CategoryName</td>
                        <td>@(category.CategoryStatus ? "Aktif" : "Pasif")</td>
                        <td><a href="/Category/DeleteCategory/@category.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Category/UpdateCategory/@category.CategoryId" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Category/AddCategory/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
    </div>
</div>
